<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </com.google.android.material.appbar.AppBarLayout>

    <CheckBox 
        android:id="@+id/checkBox4" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:text="Show notification icon" 
        tools:layout_editor_absoluteX="41dp" 
        tools:layout_editor_absoluteY="255dp"
        tools:ignore="MissingConstraints" />  

    <CheckBox 
        android:id="@+id/checkBox5" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:text="Show copy buttons " 
        tools:layout_editor_absoluteX="41dp" 
        tools:layout_editor_absoluteY="197dp"
        tools:ignore="MissingConstraints" />  

    <CheckBox 
        android:id="@+id/checkBox6" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:text="Hide passwords   " 
        tools:layout_editor_absoluteX="41dp" 
        tools:layout_editor_absoluteY="142dp"
        tools:ignore="MissingConstraints" />  

    <TextView 
        android:id="@+id/etWidth19" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:hint="Appereance settings" 
        android:inputType="textCapWords" 
        android:textSize="30sp" 
        tools:ignore="DuplicateIds,MissingConstraints" 
        tools:layout_editor_absoluteX="68dp" 
        tools:layout_editor_absoluteY="75dp" />  

    <TextView 
        android:id="@+id/Password" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:hint="Security settings" 
        android:inputType="textCapWords" 
        android:textSize="30sp" 
        tools:ignore="MissingConstraints" 
        tools:layout_editor_absoluteX="94dp" 
        tools:layout_editor_absoluteY="359dp" />

    <Switch 
        android:id="@+id/switch1" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:text="Enable dark mode" 
        tools:layout_editor_absoluteX="112dp" 
        tools:layout_editor_absoluteY="312dp"
        tools:ignore="MissingConstraints" />  

    <CheckBox 
        android:id="@+id/checkBox" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:text="Self destruction" 
        tools:layout_editor_absoluteX="41dp" 
        tools:layout_editor_absoluteY="543dp"
        tools:ignore="MissingConstraints" />  

    <CheckBox 
        android:id="@+id/checkBox3" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:text="History autoclearing" 
        tools:layout_editor_absoluteX="41dp" 
        tools:layout_editor_absoluteY="424dp"
        tools:ignore="MissingConstraints" />  

    <CheckBox 
        android:id="@+id/checkBox2" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:text="Allow screenshots " 
        tools:layout_editor_absoluteX="41dp" 
        tools:layout_editor_absoluteY="480dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Accept changes"
        app:layout_constraintBottom_toTopOf="@+id/appBarLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

</androidx.constraintlayout.widget.ConstraintLayout>